<script type="text/javascript">
	$(function() {
		//动态调用主系统的换主题JS
		document.getElementById("themeJs").src = $yt_themeJs_path; 
		
		$(".sure-btn").on('click', function() {
			//调用验证表单字段方法
			var validFlag = $yt_valid.validForm($(".from-div"));
			//判断是否验证成功
			if(validFlag) {
				//验证成功继续进行操作
			}else{
				//调用滚动条显示在错误信息位置方法
				sysCommon.pageToScroll($(".from-div .valid-font"));
			}
		});
		
	})
</script>