<script>
	$(function() {
		//动态调用主系统的换主题JS
		document.getElementById("themeJs").src = $yt_themeJs_path; 
		
		//获取差旅费总金额
		var traMoney = $(".travel-total-money").text();
		//调用金额格式化方法对金额进行格式化处理并赋值
		$(".travel-total-money").text($yt_baseElement.fmMoney(traMoney));

		var costData = [{
			costType: "差旅费",
			money: "1500",
		}, {
			costType: "培训费",
			money: "18913",
		}, {
			costType: "办公费",
			money: "50",
		}];
		//清空表格数据
		$("table .cost-tab tbody").empty();
		var trStr = "";
		//遍历数据追加到表格中
		$.each(costData, function(i, n) {
			trStr += "<tr>" +
				'<td>' + n.costType + '</td>' +
				'<td style="text-align:right">' + ($yt_baseElement.fmMoney(n.money)) + '</td>' + //金额字段文字居右显示，格式化金额内容
				'</tr>';
		});
		$(".base-form-model .cost-tab tbody").html(trStr);
	})
</script>