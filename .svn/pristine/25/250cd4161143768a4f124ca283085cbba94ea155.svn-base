			adaptive: true, // 自适应
			arrow: true, // 左右箭头
			animation: 'slide'
		});
		// 初始化
		$('#adaptive3').ytBanner({
			adaptive: true, // 自适应
			arrow: true, // 左右箭头
			animation: 'fade'
		});
		// 初始化
		$('#adaptive4').ytBanner({
			adaptive: true, // 自适应
			arrow: true, // 左右箭头
			animation: 'flash'
		});
		$('#thumbnail').ytBanner({
			btn: false, //下方圆点按钮
			thumb: {
				width: 150, //缩略图宽度
				height: 84, //缩略图高度
				gap: 4, //缩略图间距
				visible: 3 //缩略图数量
			}
		});
		$('#callback').ytBanner({
			arrow: true,
			init: function($banner, $item) {
				$item.each(function(i) {
					$(this).append('<em>' + (i + 1) + '</e>');
				});
			},
			before: function($banner, $item, currentIndex) {
				$item.eq(currentIndex).find('em').css({
					top: -120,
					opacity: 0
				});
			},
			after: function($banner, $item, currentIndex) {
				$item.eq(currentIndex).find('em').css({
					top: 210,
					opacity: 1
				});
			}
		});
		$(function() {
			$('#switch').ytBanner();
			$('.prev').click(function() {
				$('#switch').ytBanner('prev');
			});

			$('.next').click(function() {
				$('#switch').ytBanner('next');
			});

			$('.switch-num').click(function() {
				$('#switch').ytBanner(parseInt($(this).text()));
			});
		})
	});
</script>